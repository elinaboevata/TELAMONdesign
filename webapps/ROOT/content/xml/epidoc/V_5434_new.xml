                <ab>
                     <lb n="1"/> <w lemma="ἀγαθός">ἀγαθῇ</w> <w lemma="τύχη">τύχῃ</w>. 
                     <lb n="2"/> <w lemma="οἶκος">οἴκωι</w> τῶν <w lemma="σεβαστός">Σεβαστῶν</w> <w>καὶ</w>
                     <lb n="3"/> <w lemma="ἱερός">ἱερᾷ</w> <w lemma="σύγκλητος">συνκλήτωι</w> <w>καὶ</w> <w lemma="δῆμος">δήμῳ</w> 
                     <lb n="4"/> <w>τῷ</w>  <placeName type="ethnic" ref="listPlaces.xml#Roma">Ῥωμαίων</placeName>  <w lemma="βουλή">βουλῇ</w> <w>τε</w> <w>καὶ</w>
                     <lb n="5"/> <w lemma="δῆμος">δήμῳ</w> <placeName ref="listPlaces.xml#Phil">Φιλιπποπολειτῶν</placeName>
                     <lb n="6"/> <w lemma="θεά">θεᾷ</w> <persName type="divine" ref="listDivine.xml#Demetra">Δήμητρι</persName> <w>καὶ</w> <persName type="divine" ref="listDivine.xml#Persephone">Κόρῃ</persName> <w>καὶ</w> <!-- ПЕРСЕФОНА Я НЯМА В listDivine.xml--> 
                     <lb n="7"/> <w>τοῖς</w> <w lemma="συνήθης">συνήθεσι</w> <w>τῆς</w> <w lemma="ὁμόνοια">ὁμονοίας</w>
                     <lb n="8"/> <w>τὸν</w> <w lemma="βωμὸς">βομὸν</w> <g type="dot"/> <persName> <name ref="Onom.xml#Tiberius" nymRef="Τιβέριος"><expan><abbr>Τιβ</abbr><ex>έριος</ex></expan></name> <g type="dot"/> 
                                        <name ref="Onom.xml#Claudius" nymRef="Κλαύδιος"><expan><abbr>Κλ</abbr><ex>αύδιος</ex></expan></name> <g type="dot"/> 
                                        <name ref="Onom.xml#Claudianus" nymRef="Κλαυδιανός">Κλαυδια
                     <lb n="9" break="no"/><supplied reason="lost">νὸς</supplied> </name> </persName> 
                                        <persName> <name ref="Onom.xml#Quintillianus" nymRef="Κυντιλλι̣ανός"><unclear>Κυ</unclear>ιντιλλι<unclear>α</unclear>νοῦ</name> </persName> <!-- Шаранков предполага, че е патроним, затова го слагам в <PlaceName>, но го няма в авторитетните списъци, така ли да остане? --> 
                                        <w>καὶ</w> <persName> <name ref="Onom.xml#Tiberius" nymRef="Τιβέριος"><expan><abbr>Τιβ</abbr><ex>έριος</ex></expan></name>
                     <lb n="10"/>  <name nymRef="Καουάριος" ref="Onom.xml#Cavarius">Καουάριος</name> <name nymRef="Κυντιλλι̣ανός" ref="Onom.xml#Quintillianus">Κυν<unclear>τιλλια</unclear>νὸς</name> </persName> <w>ὁ</w> <w lemma="υἱὸς">υἱὸς</w> <!-- ИМЕНАТА Καουάριος И Κυντιλλιανὸς ГИ НЯМА webapps/ROOT/content/xml/authority/Onom.xml -->
                     <lb n="11"/> <w lemma="αὐτός">αὐτοῦ</w> <w>ἐκ</w> <w>τῶν</w> <w lemma="ἴδιος">ἰδίων</w> <w lemma="ἀνατίθημι">ἀνέθηκαν</w>.
                </ab>
